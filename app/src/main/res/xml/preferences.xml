            preference:hint="@string/preference_parse_captchas_regexs_tip"/-->
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_category_task">
        <SwitchPreference android:key="task_copy"
            android:dependency="general_run"
            android:title="@string/preference_copy_title"
            android:summary="@string/preference_copy_summary"
            android:defaultValue="false"/>
        <SwitchPreference android:key="task_clipboard_check"
            android:dependency="task_copy"
            android:title="@string/preference_clipboard_check_title"
            android:summary="@string/preference_clipboard_check_summary"
            android:defaultValue="false"/>
        <SwitchPreference android:key="task_notification"
            android:dependency="general_run"
            android:title="@string/preference_notification_title"
            android:summary="@string/preference_notification_summary"
            android:defaultValue="true"/>
        <!--SwitchPreference android:key="task_intercept"
