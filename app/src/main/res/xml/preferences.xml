    </PreferenceCategory>
    <PreferenceCategory android:title="@string/preference_category_about">
        <Preference
            android:key="about_help_feedback"
            android:title="@string/preference_application_help_feedback_title"
            android:summary="@string/preference_application_help_feedback_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://gitai.me/2015/12/13/me.gitai.smscodehelper">
            </intent>
        </Preference>
        <Preference
            android:key="about_rate_app"
            android:title="@string/preference_application_rate_app_title">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="market://details?id=me.gitai.smscodehelper">
            </intent>
        </Preference>
        <Preference
            android:key="about_donate"
            android:title="@string/preference_application_donate_title"
            android:summary="@string/preference_application_donate_summary">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://gitai.me/donate">
            </intent>
        </Preference>
        <me.gitai.smscodehelper.widget.LicensePreference
            android:key="about_open_source_license"
            android:title="@string/preference_application_open_source_license_title"/>
        <me.gitai.smscodehelper.widget.VersionPreference
            android:key="about_version"
            android:title="@string/preference_application_version_title"/>
