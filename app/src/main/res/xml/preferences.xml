            android:summary="@string/preference_hide_launcher_icon_summary"
            android:defaultValue="false"/>
        <me.gitai.smscodehelper.widget.GuessPreference android:key="general_guess"
            android:title="@string/preference_guess_title"
            android:summary="@string/preference_guess_summary"/>
    </PreferenceCategory>
